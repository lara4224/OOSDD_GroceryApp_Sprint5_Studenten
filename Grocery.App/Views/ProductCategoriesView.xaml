<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.ProductCategoriesView"
             x:DataType="vm:ProductCategoriesViewModel"
             Title="ProductCategoriesView">

    <Shell.TitleView>
        <Grid>
            <Label Text="{Binding Category.Name}" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Grid>
        <Border Grid.Column="0" Stroke="#C49B33" StrokeThickness="4" Padding="10" Margin="10" HorizontalOptions="Center">
            <CollectionView ItemsSource="{Binding ProductCategories}" Margin="20" HorizontalOptions="Center" EmptyView="Deze categorie bevat nog geen producten.">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="600"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="400"/>
                        </Grid.ColumnDefinitions>
                        <Label Text="Naam van het product" Grid.Column="0" FontAttributes="Bold"/>
                        <Label Text="Prijs" Grid.Column="1" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                        <Label Text="Voorraad" Grid.Column="2" HorizontalTextAlignment="End" FontAttributes="Bold"/>
                    </Grid>
                </CollectionView.Header>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:GroceryListItem">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="600"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="400"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Product.Name}" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Text="{Binding Product.Price, StringFormat='â‚¬ {0:F2}'}"/>
                            <Label Grid.Column="2" Text="{Binding Product.Stock, StringFormat='{}{0:F0} op voorraad'}" HorizontalOptions="End">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Stock}" Value="0">
                                        <Setter Property="Text" Value="niet op voorraad" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>
    